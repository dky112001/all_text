<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#0C67FF"
        android:layout_height="60dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:layout_height="40dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/backarrow"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Profile"
                android:textSize="19dp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="35dp"
                android:src="@drawable/search"
                android:layout_height="30dp"
                android:layout_marginLeft="210dp"
                />

        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_height="142dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
               app:cardCornerRadius="100dp"
                android:layout_marginTop="13dp"
                android:layout_height="110dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_marginLeft="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image"
                    android:layout_height="120dp"/>






            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="120dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Deepak Yadav"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="35sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="3dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Happy Life"
                    android:textColor="#610000"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/account1"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Account"
                android:textSize="19dp"
                android:textColor="#050101"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/privacy1"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Privacy"
                android:textSize="19dp"
                android:textColor="#050101"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/awatar"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Avatar"
                android:textSize="19dp"
                android:textColor="#050101"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/chat"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Chat"
                android:textSize="19dp"
                android:textColor="#050101"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/baseline_notification"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="App Language"
                android:textSize="19dp"
                android:textColor="#050101"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/baseline_notification"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Help"
                android:textSize="19dp"
                android:textColor="#050101"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/baseline_notification"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Help"
                android:textSize="19dp"
                android:textColor="#050101"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />



        </LinearLayout>




    </LinearLayout>



</LinearLayout>